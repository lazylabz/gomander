---
import CTAsTitle from "./components/CTAsTitle.astro";
import CTAsSubtitle from "./components/CTAsSubtitle.astro";
import CTAsDownloadButton from "./components/CTAsDownloadButton.astro";
import CTAsGithub from "./components/CTAsGithub.astro";
---
<section class="py-20 gradient-bg relative overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-6 relative z-10 text-center">
        <CTAsTitle />
        <CTAsSubtitle />

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <CTAsDownloadButton os="macOS" />
            <CTAsDownloadButton os="Windows" />
            <CTAsDownloadButton os="Linux" />
        </div>

        <!-- Secondary CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <CTAsGithub />

            <a href="https://github.com/moisesrj97/gomander" target="_blank"
               class="text-white underline hover:no-underline transition-all duration-300">
                    Read the documentation â†’
            </a>
        </div>

        <!-- Trust indicators -->
        <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-8 text-gray-200">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>100% Open Source</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>No Data Collection</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Instant Setup</span>
            </div>
        </div>
    </div>
</section>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>