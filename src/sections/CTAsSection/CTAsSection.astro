---
import CTAsTitle from "./components/CTAsTitle.astro";
import CTAsSubtitle from "./components/CTAsSubtitle.astro";
import CTAsDownloadButton from "./components/CTAsDownloadButton.astro";
import CTAsGithub from "./components/CTAsGithub.astro";
import CTAsDocumentation from "./components/CTAsDocumentation.astro";
import TrustCheckItem from "./components/TrustCheckItem.astro";
---

<section class="py-20 gradient-bg relative overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-6 relative z-10 text-center">
        <CTAsTitle />
        <CTAsSubtitle />

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <CTAsDownloadButton os="macOS" />
            <CTAsDownloadButton os="Windows" />
            <CTAsDownloadButton os="Linux" />
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <CTAsGithub />
            <CTAsDocumentation />
        </div>

        <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-8 text-gray-200">
            <TrustCheckItem text="100% Open Source" />
            <TrustCheckItem text="No Data Collection" />
            <TrustCheckItem text="Instant Setup" />
        </div>
    </div>
</section>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>