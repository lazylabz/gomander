---
type ColorVariant = 'blue' | 'purple' | 'green' | 'orange' | 'yellow' | 'gray';

interface Props {
    icon: string;
    title: string;
    description: string;
    variant: ColorVariant;
}

const { icon, title, description, variant } = Astro.props;

const colorMap = {
    blue: {
        background: 'from-blue-50 to-indigo-50',
        border: 'border-blue-200'
    },
    purple: {
        background: 'from-purple-50 to-pink-50',
        border: 'border-purple-200'
    },
    green: {
        background: 'from-green-50 to-emerald-50',
        border: 'border-green-200'
    },
    orange: {
        background: 'from-orange-50 to-red-50',
        border: 'border-orange-200'
    },
    yellow: {
        background: 'from-yellow-50 to-orange-50',
        border: 'border-yellow-200'
    },
    gray: {
        background: 'from-gray-50 to-slate-50',
        border: 'border-gray-200'
    }
};

const colors = colorMap[variant];
---

<div class={`bg-gradient-to-br ${colors.background} p-6 rounded-xl border ${colors.border}`}>
    <div class="text-2xl mb-3">{icon}</div>
    <h3 class="font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 text-sm">{description}</p>
</div>