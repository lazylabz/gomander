---
import FeaturesTitle from "./components/FeaturesTitle.astro";
import FeaturesSubtitle from "./components/FeaturesSubtitle.astro";
import FeatureCard from "./components/FeatureCard.astro";
---
<!-- Features Section -->
<section class="py-20 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <FeaturesTitle />
            <FeaturesSubtitle />
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <FeatureCard
                icon="Projects"
                title="Project Organization"
                description="Manage multiple projects with their own commands and configurations. Perfect for developers juggling different codebases."
                features={[
                    "Custom working directories",
                    "Import/export projects"
                ]}
            />

            <FeatureCard
                icon="CommandGroups"
                title="Command Groups"
                description="Group related commands and launch them together. Start your entire development stack with one click."
                features={[
                    "One-click group execution",
                    "Visual status tracking",
                    "Flexible organization"
                ]}
            />

            <FeatureCard
                icon="RealTime"
                title="Real-time Monitoring"
                description="Watch all your processes in real-time. See logs, errors, and status updates in a clean, organized interface."
                features={[
                    "Live output streaming",
                    "Error highlighting",
                    "Process status indicators"
                ]}
            />

            <FeatureCard
                icon="Configuration"
                title="Smart Configuration"
                description="Handle complex PATH requirements, nvm, pyenv, and other version managers with ease."
                features={[
                    "Extra PATH support",
                    "Per-project settings"
                ]}
            />

            <FeatureCard
                icon="CrossPlatform"
                title="Cross-platform"
                description="Works seamlessly on Windows, macOS, and Linux. One tool for your entire team, regardless of their OS."
                features={[
                    "Native performance",
                    "Platform-specific optimizations",
                    "Consistent experience"
                ]}
            />

            <FeatureCard
                icon="ZeroLearningCurve"
                title="Zero Learning Curve"
                description="Intuitive interface that feels familiar from day one. Start organizing your commands in minutes, not hours."
                features={[
                    "Drag and drop interface",
                    "Contextual help",
                    "Smart defaults"
                ]}
            />
        </div>
    </div>
</section>