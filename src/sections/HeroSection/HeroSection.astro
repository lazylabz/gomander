---
import VersionPill from "./components/VersionPill.astro";
import HeroTitle from "./components/HeroTitle.astro";
import HeroDescription from "./components/HeroDescription.astro";
import DownloadCTA from "./components/DownloadCTA.astro";
import GithubCTA from "./components/GithubCTA.astro";
---
<section class="hero-gradient relative overflow-hidden min-h-screen flex items-center">
    <!-- Floating background elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full opacity-20 float"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-blue-500 rounded-full opacity-20 float" style="animation-delay: -2s;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left Content -->
            <div class="text-white">
                <VersionPill />
                <HeroTitle />
                <HeroDescription />

                <div class="flex flex-col sm:flex-row gap-4 mb-8">
                    <DownloadCTA />
                    <GithubCTA />
                </div>

                <!-- Social Proof -->
                <div class="flex items-center gap-6 text-sm text-gray-400">
                    <div class="flex items-center gap-2">
                        <span class="text-green-400">✓</span>
                        Cross-platform
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-green-400">✓</span>
                        Open Source
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-green-400">✓</span>
                        Zero Config
                    </div>
                </div>
            </div>

            <!-- Right Content - Terminal Mockup -->
            <div class="relative">
                <div class="terminal-mockup">
                    <div class="terminal-header">
                        <div class="terminal-dot bg-red-500"></div>
                        <div class="terminal-dot bg-yellow-500"></div>
                        <div class="terminal-dot bg-green-500"></div>
                        <span class="text-gray-400 text-sm ml-4">Gomander - Development Server</span>
                    </div>
                    <div class="terminal-content text-green-400">
                        <div class="mb-2">$ gomander start dev-group</div>
                        <div class="text-blue-400 mb-1">→ Starting Frontend Server...</div>
                        <div class="text-yellow-400 mb-1">→ Starting Backend API...</div>
                        <div class="text-purple-400 mb-1">→ Starting Database...</div>
                        <div class="text-green-400 mb-2">✓ All services running</div>
                        <div class="flex items-center">
                            <span class="mr-2">$</span>
                            <span class="animate-pulse">|</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
        <div class="w-8 h-12 border-2 border-white rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white rounded-full mt-2 bounce-slow"></div>
        </div>
    </div>
</section>

<style>
    .hero-gradient {
        background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
    }

    .terminal-mockup {
        background: #1a1a1a;
        border-radius: 8px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.4);
    }

    .terminal-header {
        background: #2d2d2d;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        padding: 12px 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .terminal-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .terminal-content {
        padding: 20px;
        font-family: 'Courier New', monospace;
        font-size: 14px;
        line-height: 1.6;
    }

    .bounce-slow {
        animation: bounce 3s infinite;
    }

    @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(3px); }
    }

    .float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }
</style>