---
import VersionPill from "./components/VersionPill.astro";
import HeroTitle from "./components/HeroTitle.astro";
import HeroDescription from "./components/HeroDescription.astro";
import DownloadCTA from "./components/DownloadCTA.astro";
import GithubCTA from "./components/GithubCTA.astro";
import ChecklistItem from "./components/ChecklistItem.astro";
import ScrollIndicator from "./components/ScrollIndicator.astro";
import FloatingBubbles from "./components/FloatingBubbles.astro";
import HeroImage from "./components/HeroImage.astro";
---
<section class="hero-gradient relative overflow-hidden min-h-screen flex items-center">
    <FloatingBubbles />

    <div class="container mx-auto px-6 pt-6 sm:pt-0 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="text-white">
                <VersionPill />
                <HeroTitle />
                <HeroDescription />

                <div class="flex flex-col sm:flex-row gap-4 mb-8">
                    <DownloadCTA />
                    <GithubCTA />
                </div>

                <div class="flex items-center gap-6 text-sm text-gray-400">
                    <ChecklistItem text="Cross-platform" />
                    <ChecklistItem text="Open Source" />
                    <ChecklistItem text="Zero Config" />
                </div>
            </div>

            <HeroImage />
        </div>
    </div>

    <ScrollIndicator />
</section>

<style>
    .hero-gradient {
        background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
    }
</style>